.data
prompt: .asciiz "Digite um número: "
is_even: .asciiz "O número é par.\n"
is_odd: .asciiz "O número é ímpar.\n"

.text

main:
    # Imprime o prompt para o usuário
    li $v0, 4
    la $a0, prompt
    syscall

    # Lê o valor inteiro digitado pelo usuário
    li $v0, 5
    syscall
    move $t0, $v0  # Armazena o valor lido em $t0

    # Verifica se o valor é par ou ímpar
    andi $t1, $t0, 1  # $t1 recebe $t0 AND 1
    beqz $t1, even    # Se $t1 == 0 (par), vá para a etiqueta 'even'
    b odd             # Senão, vá para a etiqueta 'odd'

even:
    # O número é par
    li $v0, 4
    la $a0, is_even
    syscall
    j exit

odd:
    # O número é ímpar
    li $v0, 4
    la $a0, is_odd
    syscall

exit:
    # Encerra o programa
    li $v0, 10
    syscall
